package servolcm;

struct position_t
{
	byte bus;
	byte id;
	int32_t position;
	int16_t speed;
}

struct status_t
{
	byte bus;
	byte id;
	boolean active;
	boolean online;
	int32_t encoder_position;
	double multi_turn_angle;
	float voltage;
	float current;
	int8_t temperature;
}

struct pwm_t
{
	byte channel;
	int16_t angle; // 0 ~ 360 degree
}